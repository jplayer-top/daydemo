<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    

    <style name="textViewSetting">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#5500ffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#99000022</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="firstButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@drawable/dgbbutton</item>
    </style>

    <style name="nextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/dgbbutton</item>
    </style>

    <style name="LinearLayoutstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="horzaticalView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">#55ffdddd</item>
    </style>

    <style name="text_phoneprotect_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#99444444</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>