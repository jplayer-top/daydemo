<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/titleStyle"
        android:text="2.手机卡绑定" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="25dp"
        android:text="通过绑定SIM卡"
        android:textSize="18sp" />

    <View style="@style/horzaticalView" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="wrap_content"
        android:text="下次重启手机如果发现SIM卡变更，将会发送报警短信" />

    <View style="@style/horzaticalView" />

    <RelativeLayout
        android:id="@+id/rl_phoneprotect2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/dgbbutton"
        android:clickable="true" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="点击绑定SIM卡" />

        <com.itheima.ui.lock_unlockImageView
            android:id="@+id/iv_phoneprotect02_tolock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bind" />

        <LinearLayout style="@style/LinearLayoutstyle" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_focused" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_activated" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_focused" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_focused" />
        </LinearLayout>

        <Button
            style="@style/firstButton"
            android:onClick="setting_to_01"
            android:text="上一步" />

        <Button
            style="@style/nextButton"
            android:onClick="setting_to_03"
            android:text="下一步" />
    </RelativeLayout>

</LinearLayout>