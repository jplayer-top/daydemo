<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/titleStyle"
        android:text="1.欢迎使用手机防盗" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="25dp"
        android:text="您的手机安全防盗卫士:"
        android:textSize="18sp" />

    <View style="@style/horzaticalView" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="25dp"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="SIM卡变更报警" />

    <View style="@style/horzaticalView" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="25dp"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="GPS追踪" />

    <View style="@style/horzaticalView" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="25dp"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="远程锁屏" />

    <View style="@style/horzaticalView" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="25dp"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="远程数据销毁" />

    <View style="@style/horzaticalView" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/setup1" />

        <LinearLayout style="@style/LinearLayoutstyle" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_activated" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_focused" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_focused" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_picker_bg_focused" />
        </LinearLayout>

        <Button
            style="@style/nextButton"
            android:onClick="setting_to_02"
            android:text="下一步" />
    </RelativeLayout>

</LinearLayout>