<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/titleStyle"
        android:text="手机防盗" />

    <TextView
        android:id="@+id/tv_phoneprotect_phonenum"
        style="@style/textViewSetting"
        android:layout_height="35dp"
        android:text="安全号码:"
        android:textSize="18sp" />

    <View style="@style/horzaticalView" />

    <RelativeLayout
        android:id="@+id/rl_setEndChecked"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dgbbutton" >

        <TextView
            style="@style/textViewSetting"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:text="防盗保护是否打开" />

        <ImageView
            android:id="@+id/iv_foundLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/lock" />
    </RelativeLayout>

    <View style="@style/horzaticalView" />

    <TextView
        android:id="@+id/tv_phoneprotect_result"
        style="@style/textViewSetting"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/dgbbutton"
        android:text="重新进入设置向导" />

    <View style="@style/horzaticalView" />

    <TextView
        style="@style/textViewSetting"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:background="#33333333"
        android:drawableLeft="@drawable/dialog_title_default_icon"
        android:text="功能简介" />

    <View style="@style/horzaticalView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/text_phoneprotect_style"
            android:text="GPS追踪#*location*#" />

        <TextView
            style="@style/text_phoneprotect_style"
            android:text="播放报警音乐#*alarm*#" />

        <TextView
            style="@style/text_phoneprotect_style"
            android:text="远程删除数据#*wipedate*#" />

        <TextView
            style="@style/text_phoneprotect_style"
            android:text="远程锁屏#*lockscreen*#" />
    </LinearLayout>

</LinearLayout>